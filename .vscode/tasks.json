{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cmake config",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DUSE_OPENSSL=OFF",
                "-DUSE_LIBCURL=OFF",
                ".."
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "args": [],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "dependsOn": [
                "Cmake config"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
